<assembly>
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    
    <moduleSets>
        <moduleSet>
            <useAllReactorProjects>true</useAllReactorProjects>
            <includes>
                <include>com.mojita:dkv-core</include>
                <include>com.mojita:dkv-cluster</include>
            </includes>
            <binaries>
                <outputDirectory>lib</outputDirectory>
                <unpack>false</unpack>
            </binaries>
        </moduleSet>
    </moduleSets>
    
    <fileSets>
        <fileSet>
            <directory>../dkv-dist/bin</directory>
            <outputDirectory>bin</outputDirectory>
        </fileSet>
        <fileSet>
            <directory>../dkv-dist/conf</directory>
            <outputDirectory>conf</outputDirectory>
        </fileSet>
    </fileSets>
</assembly>