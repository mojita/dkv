<assembly>
    <id>bin</id>
    <formats>
        <format>tar.gz</format>
    </formats>
    
    <dependencySets>
        <dependencySet>
            <outputDirectory>lib</outputDirectory>
            <includes>
                <include>com.mojita:dkv-core</include>
                <include>com.mojita:dkv-cluster</include>
            </includes>
            <useProjectArtifact>false</useProjectArtifact>
        </dependencySet>
    </dependencySets>
    
    <fileSets>
        <fileSet>
            <directory>../dkv-dist/bin</directory>
            <outputDirectory>bin</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
            <fileMode>0755</fileMode>
        </fileSet>
        <fileSet>
            <directory>../dkv-dist/conf</directory>
            <outputDirectory>conf</outputDirectory>
            <includes>
                <include>**/*</include>
            </includes>
        </fileSet>
    </fileSets>
</assembly>